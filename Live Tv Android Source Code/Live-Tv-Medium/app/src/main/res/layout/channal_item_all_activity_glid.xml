<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="230dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0dp"
            android:elevation="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/channelImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_image" />
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_player_icon"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_favorite_bg"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/favorite_null_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_blank_fav" />

                    <ImageView
                        android:id="@+id/favorite_full_adapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_full_fov"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">



                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/live_icon_read"
                        android:visibility="gone"/>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/channelViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:letterSpacing=".02"
                android:maxLines="1"
                android:text="Channel Title"
                android:textSize="18sp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:textColor="?attr/main_text_color"/>
            <TextView
                android:textColor="@color/item_text_color_light"
                android:id="@+id/channelViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/archivo_regular"
                android:maxLines="1"
                android:letterSpacing=".02"
                android:textStyle="normal"
                android:text="Youtube"
                android:textSize="14sp"
                android:ellipsize="end" />
        </LinearLayout>
    </RelativeLayout>
