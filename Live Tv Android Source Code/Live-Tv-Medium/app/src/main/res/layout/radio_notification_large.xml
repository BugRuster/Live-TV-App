<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/purple_700">

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/img_notification"
        android:layout_toRightOf="@id/img_notification"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/img_notification_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?android:selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_cross" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@id/img_notification_close"
                android:layout_toLeftOf="@id/img_notification_close"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_notification_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:focusable="true"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:fontFamily="@font/archivo_medium"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_notification_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:ellipsize="end"
                    android:fadingEdge="horizontal"
                    android:maxLines="1"
                    android:textColor="@color/text_color_light"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/archivo_regular"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="?android:dividerHorizontal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:listDivider"
            android:dividerPadding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/img_notification_previous"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:padding="10.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_skip_previous_white" />

            <ImageButton
                android:id="@+id/img_notification_play"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_arrow_white" />

            <ImageButton
                android:id="@+id/img_notification_next"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_skip_next_white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>